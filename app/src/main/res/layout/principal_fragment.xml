<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/myRelative1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <RelativeLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="Imagens"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_alignParentStart="true"
                android:gravity="center"/>

            <Button
                android:id="@+id/principais_imagem_show"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:padding="15dp"
                android:background="@drawable/button_gradient"
                android:text="Mostrar mais"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="#fff"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_principais_imagens"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="horizontal"
            android:layout_below="@id/l1"
            android:layout_marginTop="4dp">

        </android.support.v7.widget.RecyclerView>

        <RelativeLayout
            android:id="@+id/l2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@id/recyclerview_principais_imagens">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="Vídeos"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_alignParentStart="true"
                android:gravity="center"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:padding="15dp"
                android:background="@drawable/button_gradient"
                android:text="Mostrar mais"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="#fff"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_principais_videos"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="horizontal"
            android:layout_below="@id/l2"
            android:layout_marginTop="4dp">

        </android.support.v7.widget.RecyclerView>

        <RelativeLayout
            android:id="@+id/l3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@id/recyclerview_principais_videos">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="Histórias"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_alignParentStart="true"
                android:gravity="center"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:padding="15dp"
                android:background="@drawable/button_gradient"
                android:text="Mostrar mais"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="#fff"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_principais_historias"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="horizontal"
            android:layout_below="@id/l3"
            android:layout_marginTop="4dp">

        </android.support.v7.widget.RecyclerView>

        <RelativeLayout
            android:id="@+id/l4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@id/recyclerview_principais_historias">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="Fanfics"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_alignParentStart="true"
                android:gravity="center"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:padding="15dp"
                android:background="@drawable/button_gradient"
                android:text="Mostrar mais"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="#fff"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_principais_fanfics"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="horizontal"
            android:layout_below="@id/l4"
            android:layout_marginTop="4dp">

        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>

</ScrollView>